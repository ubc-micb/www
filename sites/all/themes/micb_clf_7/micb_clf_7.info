name = UBC CLF Microbiology and Immunology Theme
description = A sub-theme of the responsive <a href="http://clf.ubc.ca/" title="Discover the UBC CLF" target="_blank">UBC CLF</a> (Common Look and Feel) v.7 theme, developed by UBC IT Web Services Department.  The CLF is developed, managed and distributed by UBC Communications &amp; Marketing. To find out more about the CLF, requirements and possible customizations please see <a href="http://brand.ubc.ca/clf" title="Discover the UBC CLF Brand" target="_blank">brand.ubc.ca/clf</a>.<br /><br />For more information, support or to report an issue with this theme, please contact <a href="mailto:itsupport@microbiology.ubc.ca?Subject=Help%20with%20Drupal%20CLF%20Theme" title="Contact UBC Microbiology and Immunology IT Support">UBC Microbiology and Immunology IT Support</a>.<br /><br /><ul><li><a href="https://github.com/ubc-micb/www/tree/master/sites/all/themes/micb_clf_7" title="Microbiology Theme on GitHub" target="_blank">UBC CLF Microbiology and Immunology theme on GitHub</a></li><li><a href="https://github.com/ubc-web-services/Megatron" title="UBC CLF Repository on GitHub" target="_blank">UBC CLF Megatron parent theme on GitHub</a></li></ul>
version = 1.0
core = 7.x
base theme = megatron

; Override the unit css file in parent theme with ours
stylesheets[all][] = css/unit-custom.css

;
; IMPORTANT! You must redefine theme regions, theme settings, and module settings as they are not inherited from parent theme.  
; CSS and JS files will be inherited. Confirm these are the same when upgrading parent theme.  
; Below are all settings copied over from the Megatron CLF parent theme.
; Read more here: https://www.drupal.org/node/225125
;

regions[search]         = 'Search'
;regions[navigation]    = 'Navigation'
regions[highlighted]    = 'Content: Above'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'First Sidebar'
regions[sidebar_second] = 'Second Sidebar'
regions[prefooter]      = 'Content: Below'

plugins[panels][layouts] = panels-layouts

breakpoints[mobile] = (min-width: 0px)
breakpoints[narrow] = (min-width: 480px)
breakpoints[tablet] = (min-width: 768px)
breakpoints[desktop] = (min-width: 980px)
breakpoints[widescreen] = (min-width: 1200px)

;
; #######  Theme CLF Setting Defaults  ########
; You can find the variable names being set in the theme-settings.php file.
; These are broken up by fieldset as defined in the theme-settings.php file.
; Commented out settings use default values.
; 
; example setting
; settings[toggle_name] = 0
;

;
; CLF Theme Options
;
; CLF Colour Scheme - Blue on White
settings[clf_clf_theme_new] = '-bw'
; CLF Version - 7.0.4 
settings[clf_clf_version] = '7.0.4'    
; CLF Package - Full Version  
settings[clf_clf_package] = 'full'
; CLF Layout - Full Width CLF (must use CLF version 7.0.4+)       
settings[clf_layout] = '__full'          
; Primary Navigation Mobile Placement - Enable to show the navigation at the bottom of the page in addition to the top of the page on mobile devices
; settings[clf_navoption] = ''			 
; Do not load updated jQuery (1.8.x) from theme - Enable to stop the theme from loading its version of jQuery
; settings[clf_jqueryoption] = ''		 
; Script Location - Include scripts page footer
settings[clf_scriptsoption] = 'footer'   

;
; Campus Identity
;
settings[clf_unit_campus] = 'vancouver'   ; Campus Identity - Vancouver

;
; Unit / Website Information
;
; Is your unit part of a Faculty? - Yes
settings[clf_faculty] = '1'   									
; If yes, choose your faculty 
settings[clf_faculty_name] = 'Faculty of Science'   			
; This field will populate the Unit Name in the header and the Unit Sub Footer 
settings[clf_unitname] = 'Microbiology & Immunology'   			
; Unit Name Background Colour 
settings[colourpicker] = '0088cc'   							
; Breadcrumbs Display Option
settings[breadcrumb_display] = 'yes'   							
; Street Address
settings[clf_streetaddr] = '1365 - 2350 Health Sciences Mall' 	
; City
settings[clf_locality] = 'Vancouver'   							
; Province / Region
settings[clf_region] = 'British Columbia'   					
; Country
settings[clf_country] = 'Canada'   								
; Postal Code
settings[clf_postal] = 'V6T 1Z3'   								
; Telephone Number - format as xxx xxx xxxx (spaces only)
settings[clf_telephone] = '604 822 3308'   						
; Fax Number - format as xxx xxx xxxx (spaces only)
settings[clf_fax] = '604 822 6041'   							
; Email 
settings[clf_email] = 'micrecep@interchange.ubc.ca'   			
; Website (do not include http://) 
settings[clf_website] = 'www.microbiology.ubc.ca'   			

;
; Unit Social Media Links (footer)
;
; Facebook profile link
; settings[clf_social_facebook] = ''   			
; Twitter profile link
; settings[clf_social_twitter] = ''   			
; Linked In profile link
; settings[clf_social_linkedin] = ''   			
; Google Plus profile link
; settings[clf_social_googleplus] = ''   		
; Youtube profile link
; settings[clf_social_youtube] = ''   			

;
; Global Utility Button Search Tool Configuration
;
; Search Label (usually your unit name)
settings[clf_searchlabel] = 'Microbiology & Immunology' 		
; Search Domain
settings[clf_searchdomain] = '*.microbiology.ubc.ca'   			
; Subunit Name Override (overrides text in search bar)
; settings[clf_subunit_override] = ''   							

